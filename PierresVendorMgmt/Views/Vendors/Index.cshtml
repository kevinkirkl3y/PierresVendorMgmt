@{
  Layout = "_Layout";
}

@using PierresVendorMgmt.Models;
  <h1 class="jumbotron">Our Current Vendors</h1>

<div class="container">
  @if (@Model.Count == 0)
  {
    <h3>You have not added any vendors yet.</h3>
  } 

  @foreach (Vendor vendor in Model)
  {
    <h3><a href='/vendors/@vendor.Id'>@vendor.Name</a></h3>
  }

  <br><p><a href='/'>Back home</a></p>
</div>